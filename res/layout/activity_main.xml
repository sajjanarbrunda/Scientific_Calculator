<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="10">
    <TextView
        android:id="@+id/tvsec"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000"
        android:text=""
        android:textColor="#f6f6f6"
        android:textSize="30sp"
        android:textAlignment="viewEnd"
        android:padding="10dp"
        android:gravity="end"
        android:maxLines="1"
        android:layout_weight="1"></TextView>
    <TextView
        android:id="@+id/tvmain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000"
        android:text=""
        android:textColor="#fff"
        android:textSize="50sp"
        android:textAlignment="viewEnd"
        android:padding="10dp"
        android:gravity="end"
        android:maxLines="1"
        android:layout_weight="2"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="7"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/bac"
                        android:text="AC"
                        android:textSize="30sp"
                        android:layout_weight="1"
                        android:textColor="#ffa500"
                        android:background="#B81F14"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="buttonClickEvent"
                        >

                    </Button>
                    <Button
                        android:id="@+id/bc"
                        android:text="C"
                        android:textSize="30sp"
                        android:layout_weight="1"
                        android:textColor="#ffa500"
                        android:background="#4CAF50"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="buttonClickEvent"></Button>
                    <Button
                        android:id="@+id/bb1"
                        android:text="("
                        android:textSize="30sp"
                        android:layout_weight="1"
                        android:textColor="#ffa500"
                        android:background="#000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="buttonClickEvent"></Button>
                    <Button
                        android:id="@+id/bb2"
                        android:text=")"
                        android:textSize="30sp"
                        android:layout_weight="1"
                        android:textColor="#ffa500"
                        android:background="#000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="buttonClickEvent"
                        ></Button>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="5"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/bsin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:text="sin"
                        android:background="#000"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:textSize="25sp"
                        android:onClick="buttonClickEvent"
                        ></Button>
                    <Button
                        android:id="@+id/bcos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:text="cos"
                        android:background="#000"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:textSize="25sp"
                        android:onClick="buttonClickEvent"
                        ></Button>
                    <Button
                        android:id="@+id/btan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:text="tan"
                        android:background="#000"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:textSize="25sp"
                        android:onClick="buttonClickEvent"
                        ></Button>
                    <Button
                        android:id="@+id/blog"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:text="log"
                        android:background="#000"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:textSize="25sp"
                        android:onClick="buttonClickEvent"
                        ></Button>
                    <Button
                        android:id="@+id/bln"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:text="ln"
                        android:background="#000"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:onClick="buttonClickEvent"
                        ></Button>

                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="5"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/bfact"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:text="X!"
                        android:background="#000"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:textSize="25sp"
                        android:onClick="buttonClickEvent"
                        ></Button>
                    <Button
                        android:id="@+id/bsquare"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:text=" x2"
                        android:background="#000"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:textSize="25sp"
                        android:onClick="buttonClickEvent"
                        ></Button>
                    <Button
                        android:id="@+id/bsqrt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:text="âˆš"
                        android:background="#000"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:textSize="25sp"
                        android:onClick="buttonClickEvent"
                        ></Button>
                    <Button
                        android:id="@+id/binv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:text="1/x"
                        android:background="#000"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:textSize="25sp"
                        android:onClick="buttonClickEvent"
                        ></Button>
                    <Button
                        android:id="@+id/bdiv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:text="Ã·"
                        android:background="#000"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:onClick="buttonClickEvent"
                        ></Button>

                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/b7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:text="7"
                        android:background="#000"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:onClick="buttonClickEvent"
                        ></Button>
                    <Button
                        android:id="@+id/b8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:text="8"
                        android:background="#000"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:onClick="buttonClickEvent"
                        ></Button>
                    <Button
                        android:id="@+id/b9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:text="9"
                        android:background="#000"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:onClick="buttonClickEvent"
                        ></Button>
                    <Button
                        android:id="@+id/bmul"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:text="x"
                        android:background="#000"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:onClick="buttonClickEvent"
                        ></Button>


                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/b4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:text="4"
                        android:background="#000"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:onClick="buttonClickEvent"
                        ></Button>
                    <Button
                        android:id="@+id/b5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:text="5"
                        android:background="#000"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:onClick="buttonClickEvent"
                        ></Button>
                    <Button
                        android:id="@+id/b6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:text="6"
                        android:background="#000"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:onClick="buttonClickEvent"
                        ></Button>

                    <Button
                        android:id="@+id/bmin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:text="-"
                        android:background="#000"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:onClick="buttonClickEvent"
                        ></Button>

                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/b3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:text="3"
                        android:background="#000"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:onClick="buttonClickEvent"
                        ></Button>
                    <Button
                        android:id="@+id/b2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:text="2"
                        android:background="#000"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:onClick="buttonClickEvent"
                        ></Button>
                    <Button
                        android:id="@+id/b1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:text="1"
                        android:background="#000"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:onClick="buttonClickEvent"
                        ></Button>

                    <Button
                        android:id="@+id/bplus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:text="+"
                        android:background="#000"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:onClick="buttonClickEvent"
                        ></Button>

                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/bpi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:text="Ï€"
                        android:background="#000"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:onClick="buttonClickEvent"
                        ></Button>
                    <Button
                        android:id="@+id/b0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:text="0"
                        android:background="#000"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:onClick="buttonClickEvent"

                        ></Button>
                    <Button
                        android:id="@+id/bdot"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:text="."
                        android:background="#000"
                        android:textColor="#ffa500"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:onClick="buttonClickEvent"

                        ></Button>

                    <Button
                        android:id="@+id/bequal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:text="="
                        android:background="#ffa500"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:onClick="buttonClickEvent"

                        ></Button>

                </LinearLayout>
            </LinearLayout>



        </LinearLayout>


    </LinearLayout>


</LinearLayout>

